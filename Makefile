#-------------------------------------------------------------------
# Compiler selection and flags
#--------------------------------------------------------------------
CC  = gcc
CCC = g++
CCCFLAGS = -std=c++11

#--------------------------------------------------------------------
#Library flags
#--------------------------------------------------------------------
CCLNFLAGS = -lgmp
CCCLNFLAGS = -lgmpxx
#
#


#-------------------------------------------------------------------
# Compiler options  -DNDEBUG <-- Cplex turns off asserts
#--------------------------------------------------------------------



#--------------------------------------------------------------------
# Applications
#---------------------------------------------------------------------
APPS = ROU CR_ROU
all: $(APPS)

ROU: ROU.cpp 
	$(CCC) -o ROU ROU.cpp $(CCLNFLAGS) $(CCCLNFLAGS) $(CCCFLAGS) 

CR_ROU: CR_ROU.cpp 
	$(CCC) -o CR_ROU CR_ROU.cpp $(CCLNFLAGS) $(CCCLNFLAGS) $(CCCFLAGS) 

#--------------------------------------------------------------------
# Additional commands
#---------------------------------------------------------------------
clean:
	rm -f $(APPS)
